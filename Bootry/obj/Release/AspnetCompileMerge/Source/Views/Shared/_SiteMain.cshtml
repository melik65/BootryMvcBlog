@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- description -->
    @if (ViewBag.metaDescription != null)
    {
        <meta name="description" content="@ViewBag.metaDescription" />
    }
    else
    {
        <meta name="description" content="@Html.Action("getSiteName", "Settings")" />
    }

    <!-- author -->
    @if (ViewBag.metaAuthor != null)
    {
        <meta name="author" content="@ViewBag.metaAuthor" />
    }
    else
    {
        <meta name="author" content="admin" />
    }

    <!-- Bootstrap CSS -->
    <link href="~/Materials/plugins/styles/bootstrap4.5.2.min.css" rel="stylesheet" />

    <!--- google fonts --->
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">

    <!-- owl carousel -->
    <link href="~/Materials/plugins/styles/owlCorusel2.3.4.min.css" rel="stylesheet" />
    <link href="~/Materials/plugins/styles/owlcarousel.2.3.4.themedefault.min.css" rel="stylesheet" />

    <!--- fontawesome --->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    
    <!--- custom css --->
    <link href="/Materials/css/global.css" rel="stylesheet" />
    <link href="/Materials/css/style.min.css" rel="stylesheet" />
    <style>
        .lazy {
            background-image: url('/Materials/images/PostLoader.gif');
            background-repeat: no-repeat;
            background-position: 50% 50%;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="page">
        <!-- header -->
        <header id="header">
            <div class="main-nav" id="navbar">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #00d2d3;">
                        <a class="navbar-brand" href="/posts/">
                            <img src="@Html.Action("getSiteLogo", "Admins")" width="100" height="40" alt="logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/posts/">Ana Sayfa <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/hakkimda">Hakkımda</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/iletisim">İletişim</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            <div class="col-12" style="background-color:#24c2c3;">
                <nav class="container navbar navbar-expand-lg navbar-light " style="background-color:#24c2c3;">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        @Html.Action("CategorLinks", "Posts")
                    </div>
                </nav>
            </div>
        </header><!-- end header -->

        @RenderBody()

        <!--- FOOTER --->
        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <div class="footer-column">
                            <h4 class="column-title">about us</h4>
                            <div class="title-border"></div>
                            <div class="row">
                                <div class="col-md-12 pt-3 f-logo">
                                    <a href="/">
                                        @if (Html.Action("getSiteSecondLogo", "Admins") != null)
                                        {
                                            <img src="@Html.Action("getSiteSecondLogo", "Admins")" alt="logo" width="150">
                                        }
                                        else
                                        {
                                            <img src="@Html.Action("getSiteLogo", "Admins")" alt="logo" width="150">
                                        }

                                    </a>
                                    <div class="pt-4">
                                        <p>lorem ipsum dolor sit amet consectur</p>
                                        <div class="btn btn-primary" style="width: 100px;">About Us</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <div class="footer-column newsletter">
                            <h4 class="column-title">newsletter</h4>
                            <div class="title-border"></div>
                            <p class="p-2 mt-3 text-capitalize">get  aur free newsletter for free</p>
                            <form>

                                <div class="group mt-5">
                                    <input type="text" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Name</label>
                                </div>

                                <div class="group">
                                    <input type="text" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Email</label>
                                </div>
                                <input type="submit" class="btn btn-primary">
                            </form>

                        </div>
                    </div>
                    <div class="col-md-3 d-none d-md-block">
                        <div class="footer-column f-most-popular">
                            <h4 class="column-title">most popular posts</h4>
                            <div class="title-border"></div>
                            <div class="row">
                                @Html.Action("MostPopular", "Posts")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <div class="footer-column">
                            <h4 class="column-title">social media</h4>
                            <div class="title-border"></div>
                            <p>Follow Us On Social Media</p>
                            <span class="f-social facebook">
                                <a href="/social"><i class="fab fa-facebook"></i></a>
                            </span>
                            <span class="f-social twitter">
                                <a href="/social"><i class="fab fa-twitter"></i></a>
                            </span>
                            <span class="f-social instagram">
                                <a href="/social"><i class="fab fa-instagram"></i></a>
                            </span>
                            <span class="f-social linkedin">
                                <a href="/social"><i class="fab fa-linkedin"></i></a>
                            </span>
                            <span class="f-social youtube">
                                <a href="/social"><i class="fab fa-youtube"></i></a>
                            </span>
                            <span class="f-social vimeo">
                                <a href="/social"><i class="fab fa-vimeo"></i></a>
                            </span>
                            <span class="f-social reddit">
                                <a href="/social"><i class="fab fa-reddit"></i></a>
                            </span>
                            <span class="f-social skype">
                                <a href="/social"><i class="fab fa-skype"></i></a>
                            </span>
                            <span class="f-social whatsapp">
                                <a href="/social"><i class="fab fa-whatsapp"></i></a>
                            </span>
                            <span class="f-social github">
                                <a href="/social"><i class="fab fa-github"></i></a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </footer><!-- FOOTER END -->

    </div>
    <!-- Back to top button -->
    <span typeof="button" id="button">
        <i class="fas fa-angle-up"></i>
    </span>

    <script src="~/Materials/plugins/jquery3.3.1.min.js"></script>
   
    <script src="~/Materials/plugins/popper1.4.7.min.js"></script>

    <script src="~/Materials/plugins/bootstrap4.5.2.min.js"></script>
    <!-- jqury lazy load images -->
    <script src="~/Materials/plugins/jquery.lazy1.7.9jquery.lazy.min.js"></script>
    <script src="~/Materials/plugins/jquery.lazy1.7.9jquery.lazy.plugins.min.js"></script>
    
    <!-- owl carousel -->
    <script src="~/Materials/plugins/owlCorusel2.3.4.min.js"></script>
    
    <script src="~/Materials/js/theme.js"></script>
    <script>
        $('.lazy').Lazy({
            placeholder: "data:image/gif;base64,R0lGODlhEALAPQAPzl5uLr9Nrl8e7...",
            effect: "show"
        });
    </script>
</body>
</html>