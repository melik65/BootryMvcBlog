@model IEnumerable<Bootry.Models.Post>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">

    <table class="display" id="example">
        <thead>
            <tr>
                <td>ID</td>
                <td>başlık</td>
                <td>tarih</td>
                <td>okunma sayısı</td>
                <td>kategori</td>
                <td>yazar</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.ID</td>
                    <td>
                        @{
                            if (post.Title.Length >= 50)
                            {
                                @post.Title.Substring(0, 49);<span>...</span>
                            }
                            else
                            {
                                @post.Title
                            }
                        }
                    </td>
                    <td>@post.Date</td>
                    <td>@post.ViewCount</td>
                    <td>@post.Category.Name</td>
                    <td>@post.Writer.Name @post.Writer.LastName</td>
                    <td>
                        <a href="/posts/edit/@post.ID" class="btn btn-success">Düzenle</a>
                        <a href="/posts/delete/@post.ID" class="btn btn-danger">sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>