@model IEnumerable<Bootry.Models.Post>

<div class="line">
    <div>trending now</div>
</div>
<div class="row row-cols-1 row-cols-md-2 news-group-3">
        @foreach (var post in Model)
        {
            <div class="col mb-4">
                <div class="card">
                    <div class="Card-image">
                        <a href="/gonderi/@post.Category.Name/@post.SeoTitle/@post.ID" title="@post.Title">
                            <img data-src="/Materials/images/news/@post.Image" class="card-img-top lazy" alt="@post.Image">
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><a href="/gonderi/@post.Category.Name/@post.SeoTitle/@post.ID">@post.Title</a></h5>
                        <a href="/kategori/@post.Category.Name-@post.CategoryID">
                            <span class="badge badge-primary category">@post.Category.Name</span>
                        </a>
                        <span class="post-wiev" style="opacity:0.7">
                            <i class="fas fa-eye"></i> @post.ViewCount
                        </span>
                        <span class="time">
                            <i class="fas fa-calendar-alt"></i> @post.Date.ToString("HH:mm")
                        </span>
                        <div class="card-text">
                            @if (post.Summary != null)
                            {
                                if (post.Summary.Length > 70)
                                {
                                    @post.Summary.Substring(0, 69)<span>...</span>
                                }
                                else
                                {
                                    @post.Summary
                                }
                            }
                        </div>
                        <a href="/gonderi/@post.Category.Name/@post.SeoTitle/@post.ID" class="btn btn-success float-left">
                            All Read
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                            </svg>
                        </a>
                        <p class="card-text float-right"><small class="text-muted">Last updated 3 mins ago</small></p>

                    </div>
                </div>
            </div>
        }

</div>