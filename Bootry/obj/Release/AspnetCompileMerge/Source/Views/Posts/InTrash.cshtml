@model IEnumerable<Bootry.Models.Post>

<br />
<table class="table">
    <tr>
        <td>
            başlık
        </td>
        <td>
            eklenme
        </td>
        <td>
            güncelleme
        </td>
        <td>
            okunma
        </td>
        <td>
            kategori
        </td>
        <td>
            yazar
        </td>
        <td>
            kurtar
        </td>
        <td>
            sil
        </td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer.Name)
            </td>
            <td>
                <a class="btn btn-success" href="/copten-cikar/@item.ID">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </td>
            <td>
                <a href="#" type="button" class="btn btn-danger" data-toggle="modal" data-target="@("#model"+item.ID)">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>

        </tr>
        <!-- Modal -->
        <div class="modal fade" id="@("model"+item.ID)" tabindex="-1" aria-labelledby="@("model"+item.ID)" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="@("model"+item.ID)">
                            gönderi silinecek
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @item.Title silinsin mi?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">iptal</button>
                        <a href="/gonderi-sil/@item.ID" class="btn btn-danger text-white">Sil</a>
                    </div>
                </div>
            </div>
        </div>
    }

</table>

