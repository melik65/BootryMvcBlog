@model IEnumerable<Bootry.Models.Writer>

<p>
    <br />
    <a href="/writers/create" class="btn btn-success">Yazar Ekle</a>
</p>
<table class="table">
    <tr>
        <th>
            isim
        </th>
        <th>
            soyisim
        </th>
        <th>
            mail
        </th>
        <th>
            şifre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Mail
            </td>
            <td>
                @item.Password
            </td>
            <td>
                <a href="/writers/edit/@item.ID" class="btn btn-success">Düzenle</a>
                <a href="/writers/delete/@item.ID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }

</table>
