@model List<Bootry.Models.Contact>

<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-bell"></i>
        <span class="badge badge-warning navbar-badge">@Model.Count</span>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <span class="dropdown-header">@Model.Count iletişim talebi</span>
        @foreach (var notf in Model)
        {
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
                <i class="fas fa-envelope mr-2"></i> @notf.Name @notf.Surname
                <span class="float-right text-muted text-sm">@notf.Mail</span>
            </a>
        }
    </div>
</li>
