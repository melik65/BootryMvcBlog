@model Bootry.Models.Post

<div class="card">
    <a href="/gonderi/@Model.Category.Name/@Model.SeoTitle/@Model.ID">
        <img data-src="/Materials/images/news/@Model.Image" class="card-img-top lazy" alt="@Model.Image">
    </a>
    <div class="card-body">
        <h5 class="card-title">
            <span class="badge badge-primary category">
                <a href="/kategori/@Model.Category.Name-@Model.CategoryID" class="text-light">@Model.Category.Name</a>
            </span> @Model.Title
        </h5>

        <p class="card-text">
            @if (Model.Summary != null)
            {
                @Model.Summary
            }
        </p>
        <a href="/gonderi/@Model.Category.Name/@Model.SeoTitle/@Model.ID" title="@Model.Title" class="btn btn-primary float-left">
            All Read
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
            </svg>
        </a>
    </div>
</div>
