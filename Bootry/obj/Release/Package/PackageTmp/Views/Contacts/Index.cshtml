@model Bootry.Models.Contact

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_SiteMain.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Materials/css/pages.css">
<section id="main" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-5">
                <div class="pagenav">
                    <ul>
                        <li>
                            <a href="">home</a>
                        </li>
                        <li>iletişim</li>
                    </ul>
                </div>
                <div class="form-group">
                    <form action="/iletisim" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <input type="text" class="form-control" placeholder="Name" name="Name" id="Name" required>
                                <span class="namebefore">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <input type="text" class="form-control" placeholder="Surname" name="Surname" id="Surname" required>
                                <span class="namebefore">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <input type="email" class="form-control" placeholder="Email" name="Mail" id="Mail" required>
                                <span class="namebefore">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <textarea class="form-control" rows="5" placeholder="Message" name="Message" id="Message"></textarea>
                            </div>
                        </div>
                        <button class="btn btn-secondary" type="submit">Gönder</button>
                        @if (ViewBag.message == "1")
                        {
                            <div class="mt-1 alert alert-success">
                                Mesajınız gönderildi.
                            </div>
                        }
                        @if(ViewBag.message == "0")
                        {
                        <div class="mt-1 alert alert-danger">
                            bir hata oluştu.
                        </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>