@model Bootry.Models.Comment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLte.cshtml";
}

<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            yorum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.commentContent)
        </dd>

        <dt>
            tarih
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            onay durumu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isApproved)
        </dd>

        <dt>
            gönderi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Post.Title)
        </dd>

        <dt>
            kullanıcı
        </dt>

        <dd>
            @Model.User.Mail
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("düzenle", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("geri", "Index")
</p>
